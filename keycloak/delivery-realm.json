{
  "realm": "delivery-realm",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "refreshTokenMaxReuse": 0,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "CUSTOMER",
        "description": "Regular customer who can place orders"
      },
      {
        "name": "RESTAURANT_OWNER",
        "description": "Restaurant owner who can manage their restaurant"
      },
      {
        "name": "COURIER",
        "description": "Delivery courier"
      },
      {
        "name": "ADMIN",
        "description": "System administrator"
      }
    ]
  },
  "clients": [
    {
      "clientId": "delivery-app",
      "name": "Delivery Application",
      "description": "Main delivery application client",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:8080/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:8080"
      ],
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access"
      ]
    },
    {
      "clientId": "api-gateway",
      "name": "API Gateway Service",
      "description": "API Gateway service client",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "api-gateway-secret",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "order-service",
      "name": "Order Service",
      "description": "Order management service client",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "order-service-secret",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "restaurant-service",
      "name": "Restaurant Service",
      "description": "Restaurant management service client",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "restaurant-service-secret",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "user-service",
      "name": "User Service",
      "description": "User management service client",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "user-service-secret",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "delivery-service",
      "name": "Delivery Service",
      "description": "Delivery management service client",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "delivery-service-secret",
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "customer1",
